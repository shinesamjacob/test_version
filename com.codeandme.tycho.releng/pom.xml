	</build>
	<modules>
		<module>../com.codeandme.tycho.plugin</module>
		<module>../com.codeandme.tycho.plugin.feature</module>
		<module>../com.codeandme.tycho.releng.p2</module>
		<module>../com.codeandme.tycho.product</module>
